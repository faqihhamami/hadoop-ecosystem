#create simple docker image with flash
#app.py

import os
from flask import Flask
app = Flask(__name__)

@app.route("/")
def main():
    return "Welcome!"

@app.route('/how are you')
def hello():
    return 'I am good, how about you?'

if __name__ == "__main__":
app.run(host="0.0.0.0", port=8080)


#Dockerfile
FROM ubuntu

ENV http_proxy 'http://username:password@proxy:port'
ENV https_proxy 'http://username:password@proxy:porthttps://github.com/mmumshad/simple-webapp-flask'

RUN apt-get update
RUN apt-get install -y python
RUN apt-get install -y python-pip
RUN pip install flask

COPY app.py /opt/app.py
ENTRYPOINT python /opt/app.py

#build
docker build -t flaskapp .

#show images
docker images

ref: https://github.com/mmumshad/simple-webapp-flask
